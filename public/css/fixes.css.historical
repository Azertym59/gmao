/* Fichier sauvegardé le Sun Mar 16 20:22:32 UTC 2025 comme référence historique */
/* ======= HARMONISATION DU THÈME TECALED GMAO ======= */

/* Force dark mode sur tout le site */
:root {
    color-scheme: dark;
}

/* === Correction des couleurs de texte === */
.text-gray-500 {
    color: #a0aec0 !important;
}

.text-gray-600, .text-gray-700, .text-gray-800, .text-gray-900 {
    color: #F3F4F6 !important; /* text-primary de notre thème */
}

/* === Correction des fonds === */
.bg-white, .bg-gray-100, .bg-gray-200 {
    background-color: #121212 !important; /* app-bg de notre thème */
    color: #F3F4F6 !important;
}

/* === Fond noir simple pour le body === */
body {
    background: #121212 !important;
}

/* === Appliquer le style glassmorphism amélioré à tous les conteneurs principaux === */
.bg-white.overflow-hidden.shadow-sm, 
.bg-white.overflow-hidden.shadow-xl,
.bg-gray-100.overflow-hidden.shadow-sm,
.bg-gray-100.overflow-hidden.shadow-xl,
.bg-gray-200.overflow-hidden.shadow-sm {
    background: rgba(30, 30, 30, 0.65) !important;
    backdrop-filter: blur(15px) !important;
    -webkit-backdrop-filter: blur(15px) !important;
    border: 1px solid rgba(255, 255, 255, 0.07) !important;
    border-radius: 0.75rem !important;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25) !important;
    transition: all 0.3s ease !important;
}

/* === Style global pour tous les boutons === */
.btn,
.btn-action, 
.btn-primary,
.btn-secondary,
.btn-success,
.btn-danger,
.btn-link,
.btn-outline,
.btn-info,
button[type="submit"]:not(.btn-link),
a.inline-flex {
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    padding: 0.5rem 1.25rem !important;
    border-radius: 0.5rem !important;
    font-weight: 600 !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
    cursor: pointer !important;
    border: none !important;
    font-size: 0.875rem !important;
    letter-spacing: 0.025em !important;
    position: relative !important;
    overflow: hidden !important;
    box-shadow: 0 4px 8px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.1) !important;
    text-decoration: none !important;
    z-index: 1 !important;
}

/* Effet de brillance commune sur les boutons */
.btn::before,
.btn-action::before, 
.btn-primary::before,
.btn-secondary::before,
.btn-success::before,
.btn-danger::before,
.btn-info::before,
button[type="submit"]:not(.btn-link)::before,
.btn-outline::before {
    content: "" !important;
    position: absolute !important;
    top: -20% !important;
    left: -200% !important;
    width: 60% !important;
    height: 200% !important;
    background: linear-gradient(to right, 
                               rgba(255, 255, 255, 0.01), 
                               rgba(255, 255, 255, 0.25),
                               rgba(255, 255, 255, 0.01)) !important;
    transform: rotate(25deg) !important;
    opacity: 0.6 !important;
    transition: all 0.8s ease-in-out !important;
    pointer-events: none !important;
    z-index: -1 !important;
}

.btn:hover::before,
.btn-action:hover::before, 
.btn-primary:hover::before,
.btn-secondary:hover::before,
.btn-success:hover::before,
.btn-danger:hover::before,
.btn-info:hover::before,
button[type="submit"]:not(.btn-link):hover::before,
.btn-outline:hover::before {
    left: 120% !important;
}

/* Effet de pulse pour attirer l'attention */
@keyframes button-pulse {
    0% { box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.4); }
    70% { box-shadow: 0 0 0 10px rgba(255, 255, 255, 0); }
    100% { box-shadow: 0 0 0 0 rgba(255, 255, 255, 0); }
}

/* Bouton principal - dark theme avec dégradé */
.btn-primary, 
button[type="submit"]:not(.btn-secondary):not(.btn-success):not(.btn-danger):not(.btn-link):not(.btn-outline):not(.btn-info) {
    background: linear-gradient(135deg, #4F46E5 0%, #3B82F6 50%, #60A5FA 100%) !important; /* Dégradé bleu violet */
    color: white !important;
    border: 1px solid rgba(255, 255, 255, 0.15) !important;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1) !important;
}

.btn-primary:hover, 
button[type="submit"]:not(.btn-secondary):not(.btn-success):not(.btn-danger):not(.btn-link):not(.btn-outline):not(.btn-info):hover {
    background: linear-gradient(135deg, #4338CA 0%, #2563EB 50%, #3B82F6 100%) !important;
    transform: translateY(-3px) !important;
    box-shadow: 0 10px 20px -3px rgba(79, 70, 229, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.1) !important;
}

.btn-primary:active, 
button[type="submit"]:not(.btn-secondary):not(.btn-success):not(.btn-danger):not(.btn-link):not(.btn-outline):not(.btn-info):active {
    transform: translateY(-1px) !important;
}

/* Bouton action - avec effet glassmorphism */
.btn-action, .btn {
    background: rgba(40, 40, 40, 0.8) !important;
    backdrop-filter: blur(4px) !important;
    -webkit-backdrop-filter: blur(4px) !important;
    color: white !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
}

.btn-action:hover, .btn:hover {
    background-color: rgba(60, 60, 60, 0.9) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 15px -3px rgba(0, 0, 0, 0.3) !important;
    border: 1px solid rgba(255, 255, 255, 0.2) !important;
}

/* Bouton secondaire avec dégradé */
.btn-secondary, button.secondary {
    background: linear-gradient(135deg, #475569 0%, #64748B 100%) !important;
    color: white !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
}

.btn-secondary:hover, button.secondary:hover {
    background: linear-gradient(135deg, #334155 0%, #475569 100%) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 15px -3px rgba(71, 85, 105, 0.3) !important;
}

/* Bouton succès/OK avec dégradé */
.btn-success, button.success {
    background: linear-gradient(135deg, #059669 0%, #10B981 50%, #34D399 100%) !important;
    color: white !important;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1) !important;
    border: 1px solid rgba(16, 185, 129, 0.3) !important;
}

.btn-success:hover, button.success:hover {
    background: linear-gradient(135deg, #047857 0%, #059669 50%, #10B981 100%) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 15px -3px rgba(5, 150, 105, 0.3) !important;
}

/* Bouton danger/suppression avec dégradé */
.btn-danger, button.danger {
    background: linear-gradient(135deg, #DC2626 0%, #EF4444 50%, #F87171 100%) !important;
    color: white !important;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1) !important;
    border: 1px solid rgba(239, 68, 68, 0.3) !important;
}

.btn-danger:hover, button.danger:hover {
    background: linear-gradient(135deg, #B91C1C 0%, #DC2626 50%, #EF4444 100%) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 15px -3px rgba(220, 38, 38, 0.3) !important;
}

/* Bouton informatif avec dégradé */
.btn-info {
    background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 50%, #93C5FD 100%) !important;
    color: white !important;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1) !important;
    border: 1px solid rgba(59, 130, 246, 0.3) !important;
}

.btn-info:hover {
    background: linear-gradient(135deg, #2563EB 0%, #3B82F6 50%, #60A5FA 100%) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 15px -3px rgba(37, 99, 235, 0.3) !important;
}

/* Bouton avec contour */
.btn-outline {
    background-color: rgba(30, 30, 30, 0.3) !important;
    backdrop-filter: blur(4px) !important;
    -webkit-backdrop-filter: blur(4px) !important;
    color: #E5E7EB !important;
    border: 1.5px solid rgba(156, 163, 175, 0.5) !important;
    box-shadow: 0 2px 6px -1px rgba(0, 0, 0, 0.1), inset 0 1px 0 0 rgba(255, 255, 255, 0.1) !important;
}

.btn-outline:hover {
    background-color: rgba(75, 85, 99, 0.3) !important;
    border-color: rgba(156, 163, 175, 0.8) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 15px -3px rgba(0, 0, 0, 0.2), inset 0 1px 0 0 rgba(255, 255, 255, 0.15) !important;
    color: white !important;
}

/* Bouton lien - texte simple avec effet de transition */
.btn-link {
    background-color: transparent !important;
    color: #60A5FA !important;
    box-shadow: none !important;
    padding: 0.25rem 0.5rem !important;
    position: relative !important;
    overflow: hidden !important;
}

.btn-link::after {
    content: '' !important;
    position: absolute !important;
    width: 0 !important;
    height: 1.5px !important;
    bottom: 0.25rem !important;
    left: 0.5rem !important;
    background-color: #3B82F6 !important;
    transition: width 0.3s ease !important;
}

.btn-link:hover {
    color: #93C5FD !important;
    text-decoration: none !important;
}

.btn-link:hover::after {
    width: calc(100% - 1rem) !important;
}

/* Animation scale pour tous les boutons (sauf btn-link) au focus */
.btn:focus:not(.btn-link),
.btn-action:focus, 
.btn-primary:focus,
.btn-secondary:focus,
.btn-success:focus,
.btn-danger:focus,
.btn-info:focus,
.btn-outline:focus,
button[type="submit"]:not(.btn-link):focus {
    animation: button-scale 0.3s ease-in-out;
}

@keyframes button-scale {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

/* === Style pour tous les éléments de formulaire === */
input:not([type="checkbox"]):not([type="radio"]), 
select, 
textarea {
    background-color: #1E1E1E !important; /* card-bg */
    border-color: rgba(75, 85, 99, 0.5) !important;
    color: #F3F4F6 !important;
    border-radius: 0.375rem !important;
    padding: 0.5rem 0.75rem !important;
    transition: all 0.2s ease !important;
}

input:focus, select:focus, textarea:focus {
    border-color: #3B82F6 !important;
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.25) !important;
    outline: none !important;
}

/* Checkboxes et radios */
input[type="checkbox"], input[type="radio"] {
    accent-color: #3B82F6 !important;
}

/* === Style pour les labels === */
label {
    color: #D1D5DB !important;
