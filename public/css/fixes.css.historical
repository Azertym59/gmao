.badge-warning {
    background-color: rgba(245, 158, 11, 0.25) !important;
    color: #FBBF24 !important;
    border: 1px solid rgba(245, 158, 11, 0.5) !important;
}

.badge-danger {
    background-color: rgba(239, 68, 68, 0.25) !important;
    color: #F87171 !important;
    border: 1px solid rgba(239, 68, 68, 0.5) !important;
}

.badge-info {
    background-color: rgba(59, 130, 246, 0.25) !important;
    color: #60A5FA !important;
    border: 1px solid rgba(59, 130, 246, 0.5) !important;
}

/* Améliorations des cartes */
.card {
    border-radius: 0.75rem;
    overflow: hidden;
    background: rgba(30, 30, 30, 0.65);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.07);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
    transform-origin: center;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
}

.card-header {
    padding: 1.25rem 1.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    background: #000000;
    position: relative;
    overflow: hidden;
}

.card-body {
    padding: 1.75rem;
}

/* Animation pour les transitions de hover */
.hover-transition {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

/* Ajout d'effets de survol avec élévation */
.hover-elevate {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

.hover-elevate:hover {
    transform: translateY(-5px) !important;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3) !important;
}

/* Ajout d'un effet de glow sur certains éléments */
.hover-glow {
    transition: all 0.3s ease !important;
}

.hover-glow:hover {
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.5) !important;
}

/* === Boutons avec icônes seulement === */
.btn-icon {
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    border-radius: 50% !important;
    padding: 0 !important;
    position: relative !important;
    overflow: hidden !important;
    z-index: 1 !important;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1) !important;
    box-shadow: 0 3px 6px -1px rgba(0, 0, 0, 0.2) !important;
}

/* Tailles des boutons icône */
.btn-icon-xs {
    width: 24px !important;
    height: 24px !important;
}

.btn-icon-sm {
    width: 32px !important;
    height: 32px !important;
}

.btn-icon-md {
    width: 40px !important;
    height: 40px !important;
}

.btn-icon-lg {
    width: 48px !important;
    height: 48px !important;
}

.btn-icon-xl {
    width: 56px !important;
    height: 56px !important;
}

/* Effet au survol pour tous les boutons icône */
.btn-icon:hover {
    transform: translateY(-3px) !important;
    box-shadow: 0 8px 15px -2px rgba(0, 0, 0, 0.25) !important;
}

.btn-icon:active {
    transform: translateY(-1px) !important;
    box-shadow: 0 3px 6px -2px rgba(0, 0, 0, 0.2) !important;
}

/* Effet de brillance pour les boutons icône */
.btn-icon::before {
    content: "" !important;
    position: absolute !important;
    top: -30% !important;
    left: -180% !important;
    width: 40% !important;
    height: 200% !important;
    background: linear-gradient(to right, 
                          rgba(255, 255, 255, 0.01), 
                          rgba(255, 255, 255, 0.15),
                          rgba(255, 255, 255, 0.01)) !important;
    transform: rotate(45deg) !important;
    transition: all 0.5s ease-in-out !important;
    pointer-events: none !important;
    z-index: -1 !important;
}

.btn-icon:hover::before {
    left: 150% !important;
}

/* Effet de rotation pour certains icônes sur hover */
.btn-icon.rotate-icon svg {
    transition: transform 0.3s ease !important;
}

.btn-icon.rotate-icon:hover svg {
    transform: rotate(15deg) !important;
}

/* === Tooltip pour boutons icône === */
.tooltip {
    position: relative !important;
}

.tooltip::after {
    content: attr(data-tooltip) !important;
    position: absolute !important;
    background-color: rgba(17, 24, 39, 0.95) !important;
    color: white !important;
    padding: 0.25rem 0.5rem !important;
    border-radius: 0.25rem !important;
    font-size: 0.75rem !important;
    white-space: nowrap !important;
    opacity: 0 !important;
    pointer-events: none !important;
    transition: all 0.2s ease !important;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3) !important;
    z-index: 10 !important;
}

.tooltip:hover::after {
    opacity: 1 !important;
}

/* Positions du tooltip */
.tooltip-top::after {
    bottom: calc(100% + 6px) !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
}

.tooltip-bottom::after {
    top: calc(100% + 6px) !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
}

.tooltip-left::after {
    right: calc(100% + 6px) !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
}

.tooltip-right::after {
    left: calc(100% + 6px) !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
}

/* Animation de pulsation pour attirer l'attention */
@keyframes pulse-animation {
    0% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(59, 130, 246, 0); }
    100% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0); }
}

@keyframes pulse-blue {
    0% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(59, 130, 246, 0); }
    100% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0); }
}

@keyframes pulse-green {
    0% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(16, 185, 129, 0); }
    100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0); }
}

@keyframes pulse-red {
    0% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(239, 68, 68, 0); }
    100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
}

.pulse-animation {
    animation: pulse-animation 2s infinite !important;
}

.pulse-primary {
    animation: pulse-blue 2s infinite !important;
}

.pulse-success {
    animation: pulse-green 2s infinite !important;
}

.pulse-danger {
    animation: pulse-red 2s infinite !important;
}

/* Ajouter un état actif pour les boutons (when pressing/clicking) */
.btn-primary:active, 
.btn-secondary:active,
.btn-success:active,
.btn-danger:active,
.btn-info:active,
.btn-action:active,
.btn-outline:active {
    transform: scale(0.98) translateY(0) !important;
    box-shadow: 0 2px 5px -1px rgba(0, 0, 0, 0.2) !important;
    transition: all 0.1s ease-in-out !important;
}

/* Styles spécifiques pour les boutons d'action dans les tables */
.btn-action {
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.15s ease-in-out;
    background-color: rgba(30, 41, 59, 0.8) !important;
    color: white !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
}

.btn-action:hover {
    background-color: rgba(51, 65, 85, 0.9) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 5px 15px -3px rgba(0, 0, 0, 0.3) !important;
}

/* Boutons spéciaux avec effets visuels avancés */
.btn-glow {
    box-shadow: 0 0 15px 2px rgba(59, 130, 246, 0.5) !important;
}

.btn-rainbow {
    background: linear-gradient(90deg, 
        #f44336, #ff9800, #ffeb3b, #4caf50, #2196f3, #9c27b0) !important;
    background-size: 600% 600% !important;
    animation: rainbow-animation 4s ease infinite !important;
    border: none !important;
    color: white !important;
    font-weight: bold !important;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3) !important;
}

@keyframes rainbow-animation {
    0% { background-position: 0% 50% }
    50% { background-position: 100% 50% }
    100% { background-position: 0% 50% }
}

.btn-neon {
    background-color: transparent !important;
    color: #f0f !important;
    border: 2px solid #f0f !important;
    box-shadow: 0 0 10px #f0f, inset 0 0 10px #f0f !important;
    text-shadow: 0 0 5px #f0f !important;
    transition: all 0.3s ease !important;
}

.btn-neon:hover {
    background-color: rgba(255, 0, 255, 0.1) !important;
    box-shadow: 0 0 20px #f0f, inset 0 0 20px #f0f !important;
}

/* Bouton 3D */
.btn-3d {
    background: linear-gradient(to bottom, #3B82F6, #1E40AF) !important;
    color: white !important;
    border: none !important;
    box-shadow: 
        0 6px 0 #1E3A8A,
        0 8px 10px rgba(0, 0, 0, 0.3) !important;
    transform: translateY(0) !important;
    transition: all 0.2s ease !important;
}

.btn-3d:hover {
    transform: translateY(-2px) !important;
    box-shadow: 
        0 8px 0 #1E3A8A,
        0 10px 15px rgba(0, 0, 0, 0.3) !important;
}

.btn-3d:active {
    transform: translateY(3px) !important;
    box-shadow: 
        0 3px 0 #1E3A8A,
        0 4px 5px rgba(0, 0, 0, 0.3) !important;
}

/* Bouton de déconnexion spécifique */
.btn-logout {
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    padding: 0.5rem 1.25rem !important;
    border-radius: 0.5rem !important;
    font-weight: 600 !important;
    cursor: pointer !important;
    text-decoration: none !important;
    position: relative !important;
    z-index: 1 !important;
    
    /* Dégradé rouge dominant */
    background: linear-gradient(135deg, #991b1b 0%, #dc2626 50%, #ef4444 100%) !important;
    color: white !important;
    border: 1px solid rgba(239, 68, 68, 0.3) !important;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2) !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
    box-shadow: 0 4px 8px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1) !important;
    overflow: hidden !important;
    
    /* Effet d'alerte subtil */
    animation: logout-idle 5s ease-in-out infinite !important;
}

.btn-logout:hover {
    background: linear-gradient(135deg, #7f1d1d 0%, #b91c1c 50%, #dc2626 100%) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 15px -3px rgba(220, 38, 38, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.1) !important;
}

.btn-logout:active {
    transform: scale(0.98) translateY(0) !important;
    background: linear-gradient(135deg, #7f1d1d 0%, #991b1b 50%, #b91c1c 100%) !important;
    box-shadow: 0 2px 5px -1px rgba(0, 0, 0, 0.2) !important;
    transition: all 0.1s ease-in-out !important;
}

/* Effet de brillance pour le bouton de déconnexion */
.btn-logout::before {
    content: "" !important;
    position: absolute !important;
    top: -100% !important;
    left: -130% !important;
    width: 70% !important;
    height: 300% !important;
    background: linear-gradient(to right, 
                           rgba(255, 255, 255, 0.01), 
                           rgba(255, 255, 255, 0.2),
                           rgba(255, 255, 255, 0.01)) !important;
    transform: rotate(40deg) !important;
    transition: all 0.5s ease-in-out !important;
    pointer-events: none !important;
    z-index: -1 !important;
}

.btn-logout:hover::before {
    left: 130% !important;
}

/* Animation subtile pour le bouton de déconnexion */
@keyframes logout-idle {
    0% { box-shadow: 0 4px 8px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1); }
    50% { box-shadow: 0 4px 8px -1px rgba(220, 38, 38, 0.25), 0 2px 4px -1px rgba(220, 38, 38, 0.15); }
    100% { box-shadow: 0 4px 8px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1); }
}

/* Version compacte pour la navigation */
.btn-logout-compact {
    background: transparent !important;
    color: #ef4444 !important;
    padding: 0 !important;
    margin-top: 0.15rem !important;
    font-size: 0.75rem !important;
    border-radius: 0 !important;
    transition: all 0.2s ease !important;
    border: none !important;
    box-shadow: none !important;
    text-align: left !important;
    position: relative !important;
    font-weight: 500 !important;
    display: inline !important;
}

.btn-logout-compact::before {
    content: "" !important;
    position: absolute !important;
    bottom: 0 !important;
    left: 0 !important;
    width: 0 !important;
    height: 1px !important;
    background-color: #ef4444 !important;
    transition: width 0.2s ease !important;
}

.btn-logout-compact:hover {
    color: #f87171 !important;
    text-decoration: underline !important;
    transform: none !important;
    background: transparent !important;
}

/* Correction des liens dans la sidebar pour meilleure lisibilité */
.sidebar-item:hover {
    background-color: rgba(55, 65, 81, 0.5) !important;
}

/* Améliorations pour les composants dropdown */
.dropdown-menu {
    background: rgba(26, 32, 44, 0.95) !important;
    backdrop-filter: blur(15px) !important;
    -webkit-backdrop-filter: blur(15px) !important;
    border: 1px solid rgba(255, 255, 255, 0.07) !important;
    border-radius: 0.75rem !important;
    box-shadow: 0 15px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2) !important;
    padding: 0.5rem !important;
    max-height: 80vh !important;
    overflow-y: auto !important;
    scrollbar-width: thin !important;
    scrollbar-color: rgba(255, 255, 255, 0.2) transparent !important;
}

.dropdown-menu::-webkit-scrollbar {
    width: 6px !important;
}

.dropdown-menu::-webkit-scrollbar-track {
    background: transparent !important;
}

.dropdown-menu::-webkit-scrollbar-thumb {
    background-color: rgba(255, 255, 255, 0.2) !important;
    border-radius: 6px !important;
}

.dropdown-item {
    color: #e2e8f0 !important;
    padding: 0.75rem 1rem !important;
    transition: all 0.2s ease-in-out !important;
    border-radius: 0.5rem !important;
    margin: 0.15rem 0 !important;
    display: flex !important;
    align-items: center !important;
}

.dropdown-item svg {
    margin-right: 0.75rem !important;
    width: 1rem !important;
    height: 1rem !important;
    opacity: 0.75 !important;
    transition: all 0.2s !important;
}

.dropdown-item:hover {
    background: rgba(59, 130, 246, 0.15) !important;
    color: #ffffff !important;
    transform: translateX(0.15rem) !important;
}

.dropdown-item:hover svg {
    opacity: 1 !important;
    transform: scale(1.1) !important;
    color: #60A5FA !important;
}

.dropdown-divider {
    border-color: rgba(255, 255, 255, 0.05) !important;
    margin: 0.5rem 0 !important;
}